.filters
	font-size: 16px
	padding: 24px 0
	background-color: color12
	padding-bottom: 15px
	position: relative
	&__inner
		max-width $content-width
		margin 0 auto
	&__row
		margin-top: 24px
		&:first-child
			margin-top: 0
		&_advanced
			display: none
	&__item
		float: left
		position: relative
		&_right
			float: right

		&_checkbox
			margin-left: 30px
			margin-top: 6px
		&_checkbox:first-child
			margin-left: 0
	&__label
		position: absolute
		width: 66px
		line-height: 18px
		text-align: right
		top: 50%
		transform translateY(-50%)
		vertical-align: middle
		&_large
			width auto
			position: static
			display: inline-block
			margin-top: 0
			transform translateY(0)
		&_services
			width: 94px
		b
			font-size: 18px
	&__input
		margin-left: 83px
		display: inline-block
		&_small
			width: 88px
		&_large
			width: 259px
		&_label-large
			margin-left: 0
			width: 78px
		&_services
			width: 290px
			margin-left: 111px
	&__value
		display: inline-block
		margin: 0 5px
		color: color9
		vertical-align: middle
	&__submit-button
		display: inline-block
		.button
			width: 155px
	&__hide-button
	&__show-button
		&
		&:visited
			display: inline-block
			color: color14
			text-decoration: none
			margin-right: 74px
			border-bottom 1px dashed
			position: relative
			opacity-hover()
			&:after
				content: ''
				border: 4px solid transparent
				border-top: 7px solid color10
				position: absolute
				left: 100%
				top: 50%
				margin-left: 14px
				transform-origin 50% 25%
				transform rotate(180deg)

	&__hide-button
		display: none

	&__show-button
		&
		&:visited
			&:after
				transform rotate(0)

	&__global-hide-button
		font-weight: 700
		text-transform: uppercase
		color: white
		padding-left 16px
		padding-right 23px
		padding-bottom: 7px
		display: inline-block
		border-radius 0 0 7px 7px
		background-color: color29
		position: absolute
		top: 100%
		left: 370px
		text-decoration: none
		padding-top: 3px
		z-index: 10
		opacity-hover()
		&:hover
			color: white
		&:before
			content: ''
			sprite($filters_zoom)
			display: inline-block
			margin-right: 8px
			margin-bottom: -3px

