.header
	background: url(../img/header/header-bg.png), radial-gradient(ellipse at center, #74094c 0%,#5f0236 100%)
	position: relative

	&__liked
		position: absolute
		right: 0
		top: -12px

	&__metro
		float: left
		margin-top: 15px
		margin-left: 105px

	&__login
		float: right
		margin-top: 15px
		&_signed
			margin-top: 30px

	&__inner
		max-width $content-width
		margin 0 auto
		position: relative

	&__top
		transition padding 0.5s ease 0s, background 0.5s ease 0s, box-shadow 0.5s ease 0s
		width 100%
		z-index 1000
		box-sizing border-box
		padding: 12px 0

	&__logo
	&__menu
		float left

	&__logo
		//

	&__menu
		float: left
	
	&__add-profile-button
		float: right
		margin-top: 7px

	&__mobile-menu-trigger
		display none
		+below(750px)
			display block
			float right

	&__github
		float right
		width 110px
		padding-top 5px

	&__bottom
		background: url(../img/header/header-bg.png), color16

	&__menu
	&__github
		+below(750px)
			display none

	&_fixed &__top
		box-shadow 0px 2px 3px rgba(#000, 0.04)
