.pagination
	m-cf()
	text-align center
	+ul-reset()
		font-size 0

	&__item
		list-style none
		padding 0
		display inline-block
		vertical-align middle
		font-size 16px
		font-weight 700

	&__link
		&
		&:visited
			color color9
			width: 25px
			height: 25px
			display block
			text-decoration none
			line-height: 25px
			text-align: center

		&:hover
			color #9d9d9d
			text-decoration none

	&__arrow
		display inline-block
		vertical-align middle
		text-align center
		transition 125ms all ease-in-out
		&_prev
			margin-right: 5px
			a:before
				content: '<'
		&_next
			margin-left: 5px
			a:before
				content: '>'

	&_spacer &__link
		width: 15px

	&__item_active &__link
		&
		&:visited
			color white
			box-shadow: 0px 1px 0px 0px rgba(105, 10, 65, 0.75)
			border-radius 2px
			background-color: color15
