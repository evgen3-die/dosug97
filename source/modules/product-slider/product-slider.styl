.product-slider
	margin: 0 -5px
	&__item
		margin: 0 5px
		position: relative
		background-color: black
		&:hover
			&:after
				content: ''
				position: absolute
				top: 50%
				left: 50%
				sprite($zoom)
				margin-left: -32px
				margin-top: -33px
		img
			display: block
			width: 100%
		&:hover img
			opacity .5
